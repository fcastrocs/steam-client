{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "declaration": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "outDir": "lib/",
    "baseUrl": "src/"
  },
  "include": ["src/**/*", "@types/index.d.ts"],
  "compileOnSave": false
}
