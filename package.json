{
    "name": "@fcastrocs/steamclient",
    "version": "4.0.4",
    "main": "./dist/src/index.js",
    "types": "./@types/index.d.ts",
    "scripts": {
        "prepare": "husky",
        "build": "tsc",
        "prepublishOnly": "tsc",
        "generate-resources": "npx tsx ./scripts/index.ts",
        "test-suite": "tsc && vitest",
        "lint": "eslint --ext .ts src",
        "lint:fix": "eslint --fix --ext .ts .",
        "format": "prettier . --write"
    },
    "lint-staged": {
        "*.{ts,json}": [
            "prettier --write"
        ]
    },
    "author": "Francisco Castro",
    "license": "ISC",
    "description": "Node.js implementation of the Steam client.",
    "keywords": [
        "steam",
        "steam api",
        "steam client"
    ],
    "engines": {
        "npm": ">=9.5.1",
        "node": ">=18.16.0"
    },
    "dependencies": {
        "@fcastrocs/steam-client-crypto": "^1.0.10",
        "long": "^5.2.3",
        "protobufjs": "^7.4.0",
        "qrcode": "^1.5.4",
        "smart-buffer": "^4.2.0",
        "type-fest": "^4.26.1"
    },
    "devDependencies": {
        "@types/node": "^22.5.4",
        "@types/qrcode": "^1.5.5",
        "@typescript-eslint/eslint-plugin": "^5.10.0",
        "@typescript-eslint/parser": "^5.10.0",
        "eslint": "^8.50.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.30.0",
        "husky": "^9.1.5",
        "prettier": "^3.3.3",
        "tsx": "^4.19.0",
        "typescript": "^5.5.4",
        "vitest": "^2.0.5"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fcastrocs/steam-client.git"
    },
    "bugs": {
        "url": "https://github.com/fcastrocs/steam-client/issues"
    },
    "homepage": "https://github.com/fcastrocs/steam-client#readme"
}
